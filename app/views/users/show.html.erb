<div class="break">
  <br>
  <br>
</div>

<div class="user">
  <% if @user == current_user %>

    <div class="user-info">
      <div class="user-img">
        <%= gravatar_for(@user) %>
      </div>
      <div class="user-text-info">
        <span id='username'><%= @user.username %> </span><br>
        <span id='email'><%= @user.email%> </span><br>     
        <small> <%= pluralize(@user_friends_count, 'friend') %> </small>
      </div>
    </div>
    <div class="edit">
      <small> <%= link_to "Edit Profile", edit_user_path(@user), id: 'profile-edit' %> </small>
    </div>

  <% else%>

    <div class="user-info">
      <strong><%= @user.username %> </strong><br>
      <small> <%= pluralize(@user_friends_count, 'friend') %> </small>
      <small> <%= pluralize(@mutual_friends_count, 'mutual friend') %> </small>
    </div>
    <div class="user-interaction">
      <%= render 'connection_interface', connection: @connection, viewee: @user %>
    </div>

  <% end %>
</div>

<div class="break">
  <br>
  <br>
</div>

<div class="user-posts">
  <%= render partial: 'posts/post', collection: @posts %>
</div>