<div>
  <div> <strong> <%= link_to post.author.username, user_path(post.author) %> </strong> </div>
  <div> <small> <%= post.time %> </small> </div>

  <div name='content'>
    <p> <%= post.content %> <p>

    <% post.attachments.each do |attachment| %>
      <p> 
        <%= render('posts/shared_post', post: attachment.attachable) if attachment.attachable_type == 'Post' %>
      </p>
    <% end%>
  </div>

  <div>
    <span class='likes-count' data-id='<%= post.id %>'> <%= post.likes_count %> </span> likes
    <span> <%= post.comments.count %> comments </span> 
    <span> <%= post.shares_count %> shares </span> 
  <div>
  <div>
    <span> 
      <%= link_to toggle_like_post_path(post), remote: true, method: :post do %>
        <button class='like-toggle' data-id ='<%= post.id %>' > 
          <%= current_user.liked?(post) ? 'Unlike' : 'Like' %>
        </button> 
      <% end %>
    </span>
    <span> 
      <%= link_to share_post_path(post), remote: true, method: :post do %> 
        <button class='share-toggle'>Share</button>
      <% end %>
    </span>
  </div>
  <%= render "comments/form", comment: Comment.new(post: post) %>
  <%= render partial: "comments/comment", collection: post.comments %>
  <br>
</div>